{% extends'base.html.twig' %}

{% block body %}
    <h1 class="blue-grey-text center-align">Bienvenue </h1>
    <h3 class="blue-grey-text center-align">Voici une s√©lection de nos articles</h3>

<div class="row">


    {% for jewelry in jewelries %}

        <div class="col s3">
    <div class="card">


            <div class="card-image waves-effect waves-block waves-light img-welcome" style="background: url('{{ jewelry.picture }}') no-repeat center center; background-size: contain;">

            </div>
            <div class="card-content">

                <span class="card-title activator grey-text text-darken-4"><i class="material-icons right">visibility</i></span>
                <p><a href="{{ jewelry.id }}"></a>{{ jewelry.name }}</p>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">Description<i class="material-icons right">close</i></span>
                <p>{{ jewelry.description }}</p>
            </div>

    </div>
        </div>
    {% endfor %}
</div>
{% endblock %}



