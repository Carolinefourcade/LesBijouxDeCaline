{% extends 'base.html.twig' %}

{% block title %}Jewelry index{% endblock %}

{% block body %}
    <h1>Jewelry index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Picture</th>
                <th>Description</th>
                <th>Price</th>
                <th>Identifier</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jewelry in jewelries %}
            <tr>
                <td>{{ jewelry.id }}</td>
                <td>{{ jewelry.name }}</td>
                <td>{{ jewelry.picture }}</td>
                <td>{{ jewelry.description }}</td>
                <td>{{ jewelry.price }}</td>
                <td>{{ jewelry.identifier }}</td>
                <td>
                    <a href="{{ path('jewelry_show', {'id': jewelry.id}) }}">show</a>
                    <a href="{{ path('jewelry_edit', {'id': jewelry.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('jewelry_new') }}">Create new</a>
{% endblock %}
